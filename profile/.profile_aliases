# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# colored GCC warnings and errors
#export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# BASH SPECIFIC
alias tree='tree -Csu'
alias h='history'
alias j='jobs -l'
alias clc='clear'
alias c='clc'
  # BASE IMPROVEMENTS
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias ..='cd ..'
  # LS
alias ls='ls -1 --group-directories-first --classify --color=auto'
alias la='ls -A'
alias l.='ls -d .*'
alias ll='ls -la'
alias l='ls -C'
  # TYPOS
alias xs='cd'
alias vf='cd'
alias kk='ll'

# FZF

# VIM
alias gvim='mvim'
alias vi=vim
alias cim=vim
alias bim=vim
alias svi='sudo vim'
alias svim='sudo vim'

# GIT
test -f ~/.git-completion.bash && . $_
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gaa='git add -A'
alias gan='git add -N'
alias gpl="git pull "
alias gps="git push "
alias gpf="git push --force-with-lease"
alias gst="git status"

alias gg='git grep -n'
alias ggw='gg -W'
alias ggf='gg -F'
alias ggb='gg --break'
  # BRANCH SPECIFIC
alias main='git co main'

# CLEANUP
alias swpfind='find . -name "*.swp" -o -name "*.swo" -o -name "*.swq" -o -name "*.swl" -o -name "*.swm" -o -name "*.swn"'
alias swpclc='find . -name "*.swp" -delete -o -name "*.swo" -delete -o -name "*.swq" -delete -o -name "*.swl" -delete -o -name "*.swm" -delete -o -name "*.swn"'
